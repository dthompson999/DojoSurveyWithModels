@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Dojo Survey 2</h1>
    <h3>(version w/Models)</h3>
</div>
<body>
    <div class="container">
        <div class="col-sm">
            <div id="main_box">
                <div class="card w-100">
                    <div class="card-body">
                        <div class="row">
                            <div class="header">
                                <h1>Survey</h1>
                            </div>
                        </div>
                        <form action="/process" method="post">
                            <div class="row">
                                <div class="col-sm">
                                    <div id="left_box">
                                        <div class="form-group">
                                            <div>
                                                <label for="name">Your Name:</label>
                                            </div>
                                            <div>
                                                <label for="location">Dojo Location:</label>
                                            </div>
                                            <div>
                                                <label for="language">Favorite Language:</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm">
                                    <div id="right_box">
                                        <div class="form-group">
                                            <div>
                                                <input class="form-control" type="text" name="Name">
                                            </div>
                                            <div>
                                                <select class="form-control" name="Location" id="">
                                                    <option value=""></option>
                                                    <option value="Chicago">Chicago</option>
                                                    <option value="Seattle">Seattle</option>
                                                    <option value="Los Angeles">Los Angeles</option>
                                                    <option value="New York">New York</option>
                                                    <option value="San Francisco">San Francisco</option>
                                                </select>
                                            </div>
                                            <div>
                                                <select class="form-control" name="Language" id="">
                                                    <option value=""></option>
                                                    <option value="Python">Python</option>
                                                    <option value="C#">C#</option>
                                                    <option value="Ruby">Ruby</option>
                                                    <option value="HTML">HTML</option>
                                                    <option value="CSS">CSS</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div>
                                    <div class="form-group">
                                        <div id="text_area">
                                            <label for="text_area">Comment (optional):</label>
                                            <textarea class="form-control" name="Comments" rows="3" cols="98"></textarea>
                                        </div>
                                    </div>
                                    <div id="button">
                                        <a href="" class="btn btn-primary"><input type="submit"></a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>